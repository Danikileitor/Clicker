<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lbContador"
        android:layout_width="163dp"
        android:layout_height="127dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/lb_Contador"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="96sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/btnContador"
        android:layout_width="788dp"
        android:layout_height="429dp"
        android:onClick="incrementar"
        android:text="@string/btn_Contador"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbContador"
        tools:ignore="VisualLintBounds,VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout>